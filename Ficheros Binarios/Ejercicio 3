
import java.io.DataOutputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.Scanner;

/**
 *
 * @author alumno
 * @version 1.0
 * @see FileOutputStream
 * @see DataOutputStream
 * @see IOException
 * @see Scanner
 */
public class Ejer3 {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.print("Cuantos numeros decimales vas a introducir: ");
        int n = sc.nextInt();

        double[] tabla = new double[n];

        System.out.println("--- Introduce los " + n + " numeros ---");
        for (int i = 0; i < n; i++) {
            System.out.print("Numero " + (i + 1) + ": ");
            tabla[i] = sc.nextDouble();
        }

        String nombreFichero = "numeros.bin";

        try {
            FileOutputStream fos = new FileOutputStream(nombreFichero);
            DataOutputStream dos = new DataOutputStream(fos);

            for (int i = 0; i < tabla.length; i++) {
                dos.writeDouble(tabla[i]);
            }

            dos.close();
            fos.close();

            System.out.println("Los numeros han sido creados");

        } catch (IOException e) {
            System.out.println("Error al guardar en el archivo: " + e.getMessage());
        }

    }
}
